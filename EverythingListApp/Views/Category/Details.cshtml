@model IEnumerable<EverythingListApp.Models.List>

@{
    ViewBag.Title = "Category | Lists";
}

<h2>@ViewBag.CategoryName</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PplQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate) ~ @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(model => item.ListName)
            </td>
            <td>
                @Html.DisplayFor(model => item.ListDescription)
            </td>
            <td>
                @Html.DisplayFor(model => item.PplQty)
            </td>
            <td>
                @Html.DisplayFor(model => item.Location)
            </td>
            <td>
                @Html.DisplayFor(model => item.StartDate) ~ @Html.DisplayFor(model => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(model => item.Duration)
            </td>
        </tr>
    }

</table>

